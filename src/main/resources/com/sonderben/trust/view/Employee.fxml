<VBox maxWidth="1.7976931348623157E308" prefHeight="200.0" styleClass="main-bg" stylesheets="@../css/general.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sonderben.trust.controller.EmployeeController">
   <children>
      <TableView fx:id="userTableView" editable="true" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="countCol" prefWidth="38.0" />
            <TableColumn fx:id="firstNameCol" prefWidth="112.0" text="Full name" />
            <TableColumn fx:id="birthdayCol" prefWidth="75.0" text="BirthDay" />
            <TableColumn fx:id="GenreCol" prefWidth="75.0" text="Genre" />
            <TableColumn fx:id="directionCol" prefWidth="75.0" text="Direction" />
            <TableColumn fx:id="emailCol" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="accountNumberCol" prefWidth="75.0" text="Num. Account" />
            <TableColumn fx:id="telephoneCol" prefWidth="75.0" text="Tel." />
            <TableColumn fx:id="userNameCol" prefWidth="75.0" text="User name" />
            <TableColumn fx:id="RolesCol" prefWidth="75.0" text="Roles" />
            <TableColumn fx:id="PassportCol" prefWidth="75.0" text="Passport" />
            <TableColumn fx:id="scheduleCol" prefWidth="75.0" text="Schedules" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="firstNameTextField" promptText="First Name" />
            <TextField fx:id="lastNameTextField" promptText="Last name" GridPane.columnIndex="1" />
            <TextField fx:id="emailTextField" promptText="Email" GridPane.rowIndex="1" />
            <TextField fx:id="accountNumberTextField" promptText="Account number" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="telephoneTextField" promptText="Telephone" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="userNameTextField" promptText="User name" GridPane.rowIndex="2" />
            <TextField promptText="Schedules" GridPane.rowIndex="3" />
            <TextField GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <DatePicker fx:id="birthdayDatePicker" promptText="Birtday" GridPane.columnIndex="2" />
            <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="choiceBoxGender" prefWidth="150.0" value="Select a role" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="M" />
                     <String fx:value="F" />
                     <String fx:value="No binary" />
                  </FXCollections>
               </items>
            </ChoiceBox>
            <TextField fx:id="directionField" promptText="Direction" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <TextField fx:id="passportTextField" promptText="Passport" GridPane.rowIndex="4" />
            <ChoiceBox fx:id="choiceBoxRole" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button layoutX="313.0" layoutY="20.0" mnemonicParsing="false" text="Print credential" />
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#onUpdateButton" text="Update" />
            <Button fx:id="deleteButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteButton" text="Delete" />
            <Button fx:id="saveButton" layoutX="65.0" layoutY="10.0" mnemonicParsing="false" onAction="#onSaveButton" text="Save" />
         </children>
         <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
